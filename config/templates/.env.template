# PR-CYBR Management Node Environment Variables
# Copy this file to .env and fill in the actual values
# NEVER commit the .env file with actual secrets to version control

# ============================================
# Docker Swarm Configuration
# ============================================
# IP address for swarm manager to advertise
SWARM_MANAGER_IP=

# Join tokens (generated during swarm init)
SWARM_JOIN_TOKEN_WORKER=
SWARM_JOIN_TOKEN_MANAGER=

# ============================================
# Terraform Cloud Configuration
# ============================================
# API token for Terraform Cloud
TFC_API_TOKEN=

# Organization name in Terraform Cloud
TFC_ORGANIZATION=PR-CYBR

# Workspace name
TFC_WORKSPACE=pr-cybr-mgmt-node

# ============================================
# Notion Configuration
# ============================================
# Notion API integration token
NOTION_API_TOKEN=

# Database ID for documentation
NOTION_DATABASE_ID=

# Page ID for root documentation page
NOTION_PAGE_ID=

# ============================================
# Slack Configuration
# ============================================
# Incoming webhook URL for notifications
SLACK_WEBHOOK_URL=

# Bot token for interactive features
SLACK_BOT_TOKEN=

# Default channel for notifications
SLACK_CHANNEL=#pr-cybr-ops

# ============================================
# GitHub Configuration
# ============================================
# Personal access token for GitHub API
GITHUB_TOKEN=

# Organization name
GITHUB_ORG=PR-CYBR

# Repository name
GITHUB_REPO=PR-CYBR-MGMT-N0D3

# ============================================
# Container Registry Configuration
# ============================================
# Registry URL (e.g., ghcr.io, docker.io)
REGISTRY_URL=ghcr.io

# Registry username
REGISTRY_USERNAME=

# Registry password or token
REGISTRY_PASSWORD=

# ============================================
# Monitoring and Logging
# ============================================
# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Enable debug mode (true/false)
DEBUG=false

# ============================================
# Security
# ============================================
# Secret encryption key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=

# API rate limit per minute
API_RATE_LIMIT=60

# Session timeout in minutes
SESSION_TIMEOUT=60
